# base utils
alias grep='grep --color=auto'
alias diff='diff --color=auto'
alias ls='ls -hN --color=auto --group-directories-first'
alias ll='ls -l'
alias la='ls -A'
alias lla='ls -lA'
alias mkdir='mkdir -vp'

# package management
alias p='sudo pacman'
alias syu='sudo pacman -Syu'
alias mirrors='sudo fetchmirrors -v -s 50 -c PL CZ LV BY SK UA'

# system
alias sc='systemctl'
alias scu='systemctl --user'

# gpu
alias novs-mesa='vblank_mode=0'
alias novs-nv='__GL_SYNC_TO_VBLANK=0'
alias vkhud='VK_INSTANCE_LAYERS=VK_LAYER_MESA_overlay'
alias optimus-nvidia='optimus-manager --switch nvidia'
alias optimus-intel='optimus-manager --switch intel'
alias game='LD_PRELOAD=/usr/\$LIB/libgamemodeauto.so.0'

# dev
alias scenebuilder=javafx-scenebuilder
alias scenebuilder11=javafx11-scenebuilder

